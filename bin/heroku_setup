#!/bin/sh

set -e

appname=$1

heroku apps:create $appname-staging -r staging
heroku apps:create $appname-production -r production

heroku addons:create heroku-postgresql:hobby-dev -r staging
heroku addons:create heroku-postgresql:hobby-dev -r production

heroku pipelines:create $appname -a $appname-staging -s staging
heroku pipelines:add $appname -a $appname-production -s production
